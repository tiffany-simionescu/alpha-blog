<div id="page-content">
  <h1 class="text-center mt-4">Categories</h1>

  <div class="flickr_pagination">
    <%= will_paginate @categories, :container => false %>
  </div>
  
  <div class="container mt-1">
    <% @categories.reverse_each do |category| %>
      <div class="card-category mb-3 shadow mb-5 bg-white rounded text-center">
        <div class="row g-0">
          <div class="col-md-8 card-center">
            <div class="card-body">
              <h5 class="card-title"><%= link_to category.name, category_path(category), class: "text-success card-link" %></h5>
              <p><%= pluralize(category.articles.count, "article") %></p>
              <p class="card-text mt-2 text-category">
                <small class="text-muted">
                  Created <%= time_ago_in_words(category.created_at) %> ago, 
                  edited <%= time_ago_in_words(category.updated_at) %> ago
                </small>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="flickr_pagination">
  <%= will_paginate @categories, :container => false %>
</div>