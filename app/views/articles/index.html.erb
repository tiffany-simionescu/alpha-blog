<div id="page-content">
  <h1 class="text-center mt-4">Listing All Articles</h1>

  <div class="container mt-1">
    <% @articles.each do |article| %>
      <div class="card mb-3 shadow mb-5 bg-white rounded">
        <div class="card-header">by Tiffany Simionescu</div>
        <div class="row g-0">
          <div class="col-md-4">
            <img src="..." class="img-fluid rounded-start" alt="...">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success" %></h5>
              <p class="card-text"><%= truncate(article.description, length: 100) %></p>
              <%= link_to "View", article_path(article), class: "btn btn-outline-success" %>
              <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-info" %>
              <%= link_to "Delete", article_path(article), class: "btn btn-outline-danger", 
                method: :delete, data: {confirm: "Are you sure you want to delete the article?"} %>
              <p class="card-text">
                <small class="text-muted">
                  Created <%= time_ago_in_words(article.created_at) %> ago, 
                  edited <%= time_ago_in_words(article.updated_at) %> ago
                </small>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>